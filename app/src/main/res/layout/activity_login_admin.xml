<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"

    tools:context="com.example.pawan_pc.cancerdiaganosis.Login_admin">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="7dp"
        android:layout_gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/admin_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shapebtn"
                android:hint="Username(Admin)"
                android:padding="10dp"
                android:layout_margin="16dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="10dp"
                />
            <EditText
                android:id="@+id/admin_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Passkey"
                android:background="@drawable/shapebtn"
                android:padding="10dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                android:drawablePadding="10dp"
                android:inputType="textPassword"
                />
            <TextView
                android:id="@+id/error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:padding="7dp"
                android:textAlignment="center"
                />
            <Button
                android:id="@+id/admin_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="16dp"
                android:text="Login"
                android:background="@drawable/shapebtn"
                android:drawableRight="@drawable/ic_trending_flat_black_24dp"
                android:paddingRight="7dp"
                android:layout_gravity="right"
                />



        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
