<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/result_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8f214e91"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        android:layout_margin="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/cancer_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#cancer1"
                android:textSize="18dp"
                android:padding="@dimen/activity_horizontal_margin"
                android:textColor="#ff0000"
                android:textStyle="bold"
                android:background="#ffffff"
                android:textAlignment="viewStart"
                /><TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Staging helps describe where a cancer is located, if or where it has spread, and whether it is affecting the other parts of the body."
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"

            />
            <TextView
                android:id="@+id/result_stage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14dp"
                android:padding="@dimen/activity_horizontal_margin"
                android:textColor="#000000"
                android:textStyle="normal"
                android:background="#ffffff"
                android:textAlignment="viewStart"
                />

            <TextView
                android:id="@+id/result_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#priority"
                android:textSize="14dp"
                android:padding="@dimen/activity_horizontal_margin"
                android:textColor="#000000"
                android:textStyle="italic"
                android:background="#ffffff"
                android:textAlignment="viewStart"
                />
            <Button
                android:id="@+id/graph_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stats"
                android:background="@drawable/shapebtn"
                android:layout_gravity="end"
                android:layout_margin="7dp"


                />
        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>